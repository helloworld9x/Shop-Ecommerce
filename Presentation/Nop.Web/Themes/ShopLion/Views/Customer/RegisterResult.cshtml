@model RegisterResultModel
@using Nop.Web.Models.Customer;
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Register").Text);

    //continue URL
    var qs = this.Context.Request.QueryString["returnUrl"];
    var continueUrl = "";
    if (!String.IsNullOrEmpty(qs) && Url.IsLocalUrl(qs))
    {
        continueUrl = qs;
    }
    else
    {
        continueUrl = Url.RouteUrl("HomePage");
    }
}
<div class="page registration-result-page">
    <div class="page-title">
        <h1>@T("Account.Register")</h1>
    </div>
    <div class="page-body">
        <br>
        <br>
        <p class="text-center"><img src="~/Themes/ShopLion/Content/images/success-icon-lg.png" alt="success-icon-lg.png" /></p>
        <div class="result text-center h2">
            @Model.Result
        </div>
        <br>
        <br>
        <div class="buttons text-center">
            <input type="button" class="btn btn-warning" onclick="location.href='@continueUrl'" value="@T("Account.Register.Result.Continue")" />
        </div>
        <br>
        <br>
    </div>
</div>
