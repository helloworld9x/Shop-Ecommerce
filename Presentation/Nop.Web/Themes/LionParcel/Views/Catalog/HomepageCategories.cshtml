@model IList<CategoryModel>

@using Nop.Web.Models.Catalog;
<div class="row mg-5">
    <div class="col-xs-12 col-sm-6">
        <a href="/shopping-home" class="image-hover-effect"><img src="~/Themes/ShopLion/Content/images/merchandise-grid.jpg" alt="merchandise" class="img-responsive"></a>
    </div>
    <div class="col-xs-12 col-sm-6">
        <a href="/flight-travel" class="travel-form image-hover-effect"><img src="~/Themes/ShopLion/Content/images/flight-grid.jpg" alt="flight-grid" class="img-responsive"></a>
    </div>
</div>
@if (Model.Count > 0)
{
    int index4 = 0;
    
    <div class="product-grid home-page-product-grid">
     <div class="carousel fdi-Carousel slide carousel-slider" id="eventCarouselCategories" data-interval="0">
         <div class="carousel-inner onebyone-carosel">
             @foreach (var item in Model)
             {
                 string css4 = "";
                 index4++;
                 if (index4 == 1)
                 {
                     css4 = "active";
                 }
                 <div class="item @css4">
                     <div class="col-xs-12 col-sm-4">
                         <div class="slider-thumb">
                             <div class="slider-thumb-left">
                                 <a href="@Url.RouteUrl("Category", new {SeName = item.SeName})">
                                     <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" class="img-responsive" style="height: 120px; width: 100%;">
                                 </a>
                             </div>
                             <div class="slider-thumb-right">
                                 <div class="stars" id="stars">
                                 </div>
                                 <h5 style="height: 17px;"><a href="@Url.RouteUrl("Category", new {SeName = item.SeName})">@item.Name</a></h5>
                                 <div class="btn-group" style="margin-left: 43px;">
                                     <a href="@Url.RouteUrl("Category", new {SeName = item.SeName})" class=" btn btn-default">
                                         <span class="im im-search"></span> Details
                                     </a>
                                 </div>
                             </div>
                         </div>
                     </div>
                 </div>
             }

         </div>
         <a class="left carousel-control" href="#eventCarouselCategories" role="button" data-slide="prev">
             <span class="im im-chevron-thin-left" aria-hidden="true"></span>
             <span class="sr-only">Previous</span>
         </a>
         <a class="right carousel-control" href="#eventCarouselCategories" role="button" data-slide="next">
             <span class="im im-chevron-thin-right" aria-hidden="true"></span>
             <span class="sr-only">Next</span>
         </a>
     </div>
 </div>
    var css = "";
    int index = 0;
   
                }


