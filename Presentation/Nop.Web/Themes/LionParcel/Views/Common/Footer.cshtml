@model FooterModel
@using Nop.Core
@using Nop.Core.Domain.Tax
@using Nop.Core.Infrastructure
@using Nop.Web.Models.Common;

<footer>
    <div class="footer">
        <div class="container">
            <form action="/home/subcrible-mailjet" method="POST" data-ajax="true" data-ajax-failure="OnFailure" data-ajax-success="OnSucess">
                <div class="news-letter">
                    <div class="row">
                        <div class="col-md-5">
                            <h3>@T("Sign up for amazing offers")</h3>
                            <p>@T("Exclusive access to coupons, offers, and promotionss")</p>
                        </div>
                        <div class="col-md-3 col-sm-5">
                                <input id="emailjetId" class="form-control" placeholder="@T("Enter your email")" name="email" aria-describedby="basic-addon2" type="email" required="required">
                        </div>
                        <div class="col-md-3 col-sm-5">
                            <input id="emailjetName" class="form-control" placeholder="@T("Enter your name")" name="name" aria-describedby="basic-addon2" type="text" required="required">
                        </div>
                        <div class="col-md-1 col-sm-2">
                            <button class="btn btn-darker btn-block" type="submit">
                                <i class="glyphicon glyphicon-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            <ul class="link-follow width-full">
                @if (!string.IsNullOrEmpty(Model.FacebookLink))
                {
                    <li><a href="@Model.FacebookLink" class="im im-facebook" target="_blank"></a></li>
                }
                @if (!string.IsNullOrEmpty(Model.TwitterLink))
                {
                    <li><a href="@Model.TwitterLink" class="im im-twitter" target="_blank"></a></li>
                }
                @*@if (!string.IsNullOrEmpty(Model.InstagramLink))
                {
                    <li><a class="im im-instagram-normal" href="@Model.InstagramLink"target="_blank"></a></li>
                }*@
            </ul>
            <ul>
                @foreach (var topic in Model.Topics.Where(x => x.IncludeInFooterColumn1).ToList())
                {
                    <li><a href="@Url.RouteUrl("Topic", new {SeName = topic.SeName})">@topic.Name</a><span> | </span></li>
                }
                <li><a href="@Url.RouteUrl("ContactUs")">@T("ContactUs")</a></li>
            </ul>
            <div class="company-info">
                <strong>@T("PT. LION EXPRESS")</strong>
                <div>@T("Head Office: Jl. Agave Raya No. 55, Kedoya Selatan, Jakarta Barat, Indonesia. 11520")</div>
                <div>Phone: <a href="tel:+62-21-5800939">+62-21-5800939</a> / <a href="tel:+62-21-22580868">+62-21-22580868</a></div>
            </div>
            <p>@T("© Copyright by Shopatlion.com 2015.All Rights Reserved. ")</p>
        </div>
    </div><!-- .container -->
</footer>

<a href="#0" class="cd-top cd-is-visible">Top</a>

<script type="text/javascript">
    $(document).ready(function () {
        $('.footer-block .title').click(function () {
            var e = window, a = 'inner';
            if (!('innerWidth' in window)) {
                a = 'client';
                e = document.documentElement || document.body;
            }
            var result = { width: e[a + 'Width'], height: e[a + 'Height'] };
            if (result.width < 769) {
                $(this).siblings('.list').slideToggle('slow');
            }
        });
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.block .title').click(function () {
            var e = window, a = 'inner';
            if (!('innerWidth' in window)) {
                a = 'client';
                e = document.documentElement || document.body;
            }
            var result = { width: e[a + 'Width'], height: e[a + 'Height'] };
            if (result.width < 1001) {
                $(this).siblings('.listbox').slideToggle('slow');
            }
        });
    });
</script>